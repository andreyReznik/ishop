<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">


    <import resource="classpath:/beans/daos.xml"/>

    <bean id="productsService" class="ua.sourceit.ishop.services.ProductServiceImpl">
        <constructor-arg ref="watchDao"/>
    </bean>

    <bean id="productPropertyService" class="ua.sourceit.ishop.services.ProductPropertyServiceImpl">
        <constructor-arg ref="amountedPropertyDao"/>
    </bean>

    <bean id="serviceFactory" class="ua.sourceit.ishop.services.ServiceFactoryImpl">
        <property name="productService" ref="productsService" />
        <property name="productPropertyService" ref="productPropertyService" />
    </bean>


</beans>