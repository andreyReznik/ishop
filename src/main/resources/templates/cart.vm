<table id="shopping-cart-table" class="data-table cart-table">
    <colgroup>
        <col width="1">
        <col width="1">
        <col width="1">
        <col width="1">
        <col width="1">
        <col width="1">
        <col width="1">
    </colgroup>
    <thead>
    <tr class="first last">
        <th rowspan="1" class="cart-item"><span class="nobr">Item</span></th>
        <th rowspan="1"></th>
        <th rowspan="1"></th>
        <th class="a-center cart-price" colspan="1"><span class="nobr">Price</span></th>
        <th rowspan="1" class="a-center cart-qty">Qty</th>
        <th class="a-center cart-subtotal" colspan="1">Subtotal</th>
        <th rowspan="1" class="a-center cart-remove">Remove</th>
    </tr>
    </thead>
    <tfoot>
    <tr class="first last">
        <td colspan="50" class="a-right last">
            <button type="button" title="Continue Shopping" class="button btn-continue"
                    onclick="window.history.back();"><span><span>Continue Shopping</span></span></button>
            <button onclick="window.location='/product/cart/checkout';"  name="update_cart_action" value="empty_cart" title="CHECKOUT"
                    class="button btn-empty" id="empty_cart_button"><span><span>CHECKOUT</span></span></button>
            <!--[if lt IE 8]>
            <input type="hidden" id="update_cart_action_container"/>
            <script type="text/javascript">
                //<![CDATA[
                                Event.observe(window, 'load', function()
                                {
                                    // Internet Explorer (lt 8) does not support value attribute in button elements
                                    $emptyCartButton = $('empty_cart_button');
                                    $cartActionContainer = $('update_cart_action_container');
                                    if ($emptyCartButton && $cartActionContainer) {
                                        Event.observe($emptyCartButton, 'click', function()
                                        {
                                            $emptyCartButton.setAttribute('name', 'update_cart_action_temp');
                                            $cartActionContainer.setAttribute('name', 'update_cart_action');
                                            $cartActionContainer.setValue('empty_cart');
                                        });
                                    }

                                });
                            //]]>
                            </script>
                            <![endif]-->
        </td>
    </tr>
    </tfoot>
    <tbody>
        #foreach ($entry in $watchList.entrySet())
        <tr class="jqCartItem first last odd">
            <td class="cart-item-view-image">
                <div class="cart_first_wrap">
                    <!-- OUT OF STOCK -->
                    <a>
                        <img src="$entry.key.watchImages[0].smallImage" width="107" height="107"
                             alt="$entry.key.info">
                    </a>
                </div>
            </td>
            <td class="cart-item-view-name">
                <div class="cart-item-view-image-special">
                    <h2 class="product-name">
                        <a href="/product/view/$entry.key.id">$entry.key.info</a>
                    </h2>
                </div>
            </td>
            <td class="a-center cart-item-view-price">
            </td>
            <td class="a-right cart-item-view-price-desktop">
                                        <span class="cart-price">
                    <span class="price">$entry.key.price</span>
                                        </span>
            </td>
            <td class="a-center cart-item-view-qty">
                <input name="cart[$entry.key.id][qty]" id="qty-val_$entry.key.id" value="$entry.value"
                       size="4" title="Qty" class="input-text qty" maxlength="12" type="number">
                <a href="javascript:" onclick="updateCart('qty-val_$entry.key.id', $entry.key.id,$entry.key.price)"
                   name="update_cart_action" title="Update" class="update">Update</a>
        <span id="uc-please-wait" class="please-wait" style="display:none;">
            <img src="/img/opc-ajax-loader.gif" alt="" class="v-middle"> Please wait, loading...        </span>
                <span id="span-update-cart"></span>
            </td>
            <td class="a-right cart-item-view-subtotal">
                                <span class="cart-price">
                            <span id="cart-item-view-subtotal-$entry.key.id" class="price">
                            #set( $value = $entry.key.price * $entry.value )
                            $value
                            </span>
                                </span>
            </td>
            <td class="a-center cart-item-remove last"><a href="/product/cart/delete/$entry.key.id" title="Remove"
                                                          class="btn-remove btn-remove2">X</a></td>
        </tr>
    </tbody>
        #end
</table>